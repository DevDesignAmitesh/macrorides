{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "env": []
    },

    "build:next": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "build:node": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
